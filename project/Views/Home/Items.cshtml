@{
    ViewData["Title"] = "Items";
}
@model List<MyViewModels>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <header class="header">
        <a asp-action="" class="header__logo"><img src="~/images/title.png" alt="" width="100%" height="65px" /></a>
        <form action="">
            <input type="text" class="searchInput" placeholder="Search" />
            <input type="button" class="searchBtn" value="" onclick="searchSomething();" />
        </form>
        <ul class="header__list">
            <li class="header__item"><a asp-action="Home_auth" class="header__link">КОЛЛЕКЦИИ</a></li>
            <li class="header__item"><a asp-action="" class="header__link">ВОЙТИ В ЛИЧНЫЙ КАБИНЕТ</a></li>
        </ul>
    </header>
    <section>
        @if (Model.Count == 0)
        {
            <p style="text-align: center;">Нет данных для отображения.</p>
        }
        else
        {
            <div class="container">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-md-4">
                            <div class="card__item">
                                <div class="card__info">
                                    <div>
                                        <p class="card__name">@item.Items.Name</p>
                                        <p class="card__name">#@item.Items.Tags</p>
                                        @if (!string.IsNullOrEmpty(@item.Lists.String1_name) && !string.IsNullOrEmpty(@item.Items.String1))
                                        {
                                            <p class="card__description">@item.Lists.String1_name: @item.Items.String1</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.String2_name) && !string.IsNullOrEmpty(@item.Items.String2))
                                        {
                                            <p class="card__description">@item.Lists.String2_name: @item.Items.String2</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.String3_name) && !string.IsNullOrEmpty(@item.Items.String3))
                                        {
                                            <p class="card__description">@item.Lists.String3_name: @item.Items.String3</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Multiline1_name) && !string.IsNullOrEmpty(@item.Items.Multiline1))
                                        {
                                            <p class="card__description">@item.Lists.Multiline1_name: @item.Items.Multiline1</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Multiline2_name) && !string.IsNullOrEmpty(@item.Items.Multiline2))
                                        {
                                            <p class="card__description">@item.Lists.Multiline2_name: @item.Items.Multiline2</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Multiline3_name) && !string.IsNullOrEmpty(@item.Items.Multiline3))
                                        {
                                            <p class="card__description">@item.Lists.Multiline3_name: @item.Items.Multiline3</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Int1_name) && !string.IsNullOrEmpty(@item.Items.Int1.ToString()))
                                        {
                                            <p class="card__description">@item.Lists.Int1_name: @item.Items.Int1</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Int2_name) && !string.IsNullOrEmpty(@item.Items.Int2.ToString()))
                                        {
                                            <p class="card__description">@item.Lists.Int2_name: @item.Items.Int2</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Int3_name) && !string.IsNullOrEmpty(@item.Items.Int3.ToString()))
                                        {
                                            <p class="card__description">@item.Lists.Int3_name: @item.Items.Int3</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Checkbox1_name) && !string.IsNullOrEmpty(@item.Items.Checkbox1.ToString()))
                                        {
                                            <p class="card__description">@item.Lists.Checkbox1_name: @item.Items.Checkbox1</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Checkbox2_name) && !string.IsNullOrEmpty(@item.Items.Checkbox2.ToString()))
                                        {
                                            <p class="card__description">@item.Lists.Checkbox2_name: @item.Items.Checkbox2</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Checkbox3_name) && !string.IsNullOrEmpty(@item.Items.Checkbox3.ToString()))
                                        {
                                            <p class="card__description">@item.Lists.Checkbox3_name: @item.Items.Checkbox3</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Data1_name) && !string.IsNullOrEmpty(@item.Items.Data1.ToString()))
                                        {
                                            <p class="card__description">@item.Lists.Data1_name: @item.Items.Data1</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Data2_name) && !string.IsNullOrEmpty(@item.Items.Data2.ToString()))
                                        {
                                            <p class="card__description">@item.Lists.Data2_name: @item.Items.Data2</p>
                                        }
                                        @if (!string.IsNullOrEmpty(@item.Lists.Data3_name) && !string.IsNullOrEmpty(@item.Items.Data3.ToString()))
                                        {
                                            <p class="card__description">@item.Lists.Data3_name: @item.Items.Data3</p>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        }
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>


