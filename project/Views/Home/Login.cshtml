@{
    ViewData["Title"] = "Collections - Регистрация";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script type="text/javascript" src='https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.3.min.js'></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="js/landio.min.js"></script>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<body>
    <div id="MyPopup" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="color: black;">УВЕДОМЛЕНИЕ</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h6 id="lblError" style="color: black;"></h6>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">закрыть</button>
                </div>
            </div>
        </div>
    </div>

    <script>$('.message a').click(function () {
            $('form').animate({
                height: "toggle",
                opacity: "toggle"
            }, "slow");
        });</script>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                document.querySelector("#lblError").innerHTML = '@Html.Raw(ViewBag.Message)';
                $("#MyPopup").modal("show");
            };
        </script>
    }

    <div class="container">
        <h1>Регистрация</h1>
        <form method="post" asp-action="Login" asp-controller="Home">
            <div class="block">
                <input type="email" placeholder="Введите почту" name="email" required />
            </div>
            <div class="block">
                <input type="password" placeholder="Введите пароль" name="password" required />
            </div>
            <div class="block">
                <input type="password" placeholder="Подтвердите пароль" name="repassword" required />
            </div>

            <input type="submit" value="Зарегистрироваться"><br>
        </form>
        <p>Вы уже зарегистрированы?&#160;&#160;<a asp-action="Auth" asp-controller="Home">Войти</a></p>
    </div>
</body>
</html>

